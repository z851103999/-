/* components/button/button.wxss */
button::after{ border: none; }
.button-hover { opacity: 0.6; }
.tomato-button {
  width: 540rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}
/* 带有渐变样式 */
.tomato-button.change {
  background: linear-gradient(to right,#EF9B75, #F6705A);
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
}
/* 默认样式 */
.tomato-button.default{
  background: transparent;
  border:2rpx solid #f6705a;
  color: #f6705a;
}
/* 迷你样式 */
.tomato-button.mini{ 
  width: 360rpx;
}